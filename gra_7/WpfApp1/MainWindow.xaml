<Page
    x:Class="WpfApp1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfApp1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="window1"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Offset="0" Color="Black" />
                <GradientStop Offset="1" Color="#FFF1A7A7" />
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>
        <Label
            Grid.Column="1"
            Width="222"
            Margin="156,15,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFCF9776"
            Content="The Polish Fighter"
            FontFamily="Comic Sans MS"
            FontSize="24" />
        <Button
            x:Name="button1"
            Grid.Column="1"
            Width="222"
            Height="43"
            Margin="156,94,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="button1_Click"
            Content="Nowa Gra"
            FontSize="22" />
        <Button
            x:Name="button2"
            Grid.Column="1"
            Width="222"
            Height="43"
            Margin="156,174,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="button2_Click"
            Content="Kontynuuj Grę"
            FontSize="22" />
        <Button
            x:Name="info"
            Grid.Column="1"
            Width="222"
            Height="43"
            Margin="156,254,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="info_Click"
            Content="Informacje"
            FontSize="22" />
        <Button
            x:Name="exit"
            Grid.Column="1"
            Width="222"
            Height="43"
            Margin="156,334,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="exit_Click"
            Content="Wyjście"
            FontSize="22" />
    </Grid>
</Page>
